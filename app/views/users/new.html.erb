<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
     
    <% # @user var: Rails automagically POSTs form content to URI '/users' %>
    <%= form_for(@user) do |f| %>
      <% # Note that we'll pass var f to rendered partial %>
    	<%= render 'fields', f: f  %>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Already have an account? <%= link_to "Log in now!", login_path %></p>
  </div>
</div>
